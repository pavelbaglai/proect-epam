@model IEnumerable<Music_Store.Models.ViewModels.CreditCardViewModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    TempData["previousPage"] = "creditIndexPage";
}


<div style="margin-top: 3em;">
    <div style="margin-bottom: 1em;">
        <span class="title">List of all Credit cards</span>
        <a asp-controller="CreditCard" asp-action="Create" title="Add new Credit Card" style="margin-left: 3em;">
            <span>Add new credit card</span>
        </a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    <span>Card Number</span>
                </th>
                <th>
                    <span>First Name</span>
                </th>
                <th>
                    <span>Last Name</span>
                </th>
                <th>
                    <span>Address</span>
                </th>
                <th>
                    <span>City</span>
                </th>
                <th>
                    <span>Provice</span>
                </th>
                <th>
                    <span>Postal Code</span>
                </th>
                <th>
                    <span>Country</span>
                </th>
                <th>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var creditCard in Model)
            {
                <tr>
                    <td style="padding-top: 28px;">
                        <span style="font-size: 14px;">@creditCard.CreditCardNumber</span>
                    </td>
                    <td style="padding-top: 28px;">
                        <span style="font-size: 14px;"> @creditCard.FirstName</span>
                    </td>
                    <td style="padding-top: 28px;">
                        <span style="font-size: 14px;">@creditCard.LastName</span>
                    </td>
                    <td style="padding-top: 28px;">
                        <span style="font-size: 14px;"> @creditCard.Address</span>
                    </td>
                    <td style="padding-top: 28px;">
                        <span style="font-size: 14px;">@creditCard.City</span>
                    </td>
                    <td style="padding-top: 28px;">
                        <span style="font-size: 14px;"> @creditCard.Provice</span>
                    </td>
                    <td style="padding-top: 28px;">
                        <span style="font-size: 14px;">@creditCard.PostalCode</span>
                    </td>
                    <td style="padding-top: 28px;">
                        <span style="font-size: 14px;"> @creditCard.Country</span>
                    </td>
                    <td style="padding-top: 28px;">
                        <form method="post" asp-action="Edit" title="Delete">
                            <input class="input-img" type="image" src="~/res/images/etc/delete.png" />
                            <input type="hidden" name="ID" value="@creditCard.ID" />
                            <input type="hidden" name="customerID" value="@creditCard.CustomerID" />
                        </form>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>